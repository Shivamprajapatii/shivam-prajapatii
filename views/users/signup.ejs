<% layout("/layouts/boilerplate") %>

    <div class="row">
        <h1 class="col-6 offset-3">SingUp on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/singup" method="POST" class="needs-validation" novalidate>
                <div class="mb-2">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="valid-feedback">looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" cols="20" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please Provide a Valid Email</div>
                </div>

                <div class="mb-3">
                    <label for="pasword" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" cols="30" rows="5" class="form-control" required></input>
                    <div class="invalid-feedback">Please Provide a Valid Password:</div>
                </div>
                <button  class="btn btn-success">SingUp</button>
            </form>
        </div>
    </div>